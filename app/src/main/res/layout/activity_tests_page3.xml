<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Tests_page3">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/book_test_heading"
            android:id="@+id/test_list_heading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/list_name"
    />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/test_list_heading"
            android:layout_marginTop="104dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/vdrl_test">
                <ImageView android:layout_width="wrap_content"
                           android:background="@drawable/vdrl_test_btn_background"
                           android:id="@+id/vdrl_img"
                           android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                           android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintBottom_toBottomOf="parent"
                           android:contentDescription="vdrl"
                />
                <Button
                        android:layout_width="wrap_content"
                        android:background="@drawable/more_info_btn"
                        app:layout_constraintTop_toTopOf="@+id/vdrl_img"
                        app:layout_constraintBottom_toBottomOf="@+id/vdrl_img"
                        android:layout_height="wrap_content"
                        android:id="@+id/vdrl_more_inf"
                        android:layout_marginTop="104dp"
                        app:layout_constraintStart_toStartOf="@+id/vdrl_img"
                        android:layout_marginStart="12dp"
                />
                <Button
                        android:background="@drawable/booknow_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/vdrl_book_btn"
                        app:layout_constraintStart_toEndOf="@id/vdrl_more_inf"
                        app:layout_constraintTop_toTopOf="@id/vdrl_img"
                        app:layout_constraintBottom_toBottomOf="@id/vdrl_img"
                        app:layout_constraintEnd_toEndOf="@id/vdrl_img"
                        app:layout_constraintHorizontal_bias="0.605" app:layout_constraintVertical_bias="0.91"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/cvs_test">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/cvs_test_btn_background"
                        android:id="@+id/cvs_img"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.482"
                        android:layout_marginStart="8dp"
                        app:layout_constraintVertical_bias="0.0"
                        android:contentDescription="cvs"/>
                <Button
                        android:background="@drawable/more_info_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/cvs_more_inf"
                        app:layout_constraintStart_toStartOf="@+id/cvs_img" android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.93"/>
                <Button
                        android:background="@drawable/booknow_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cvs_more_info"
                        app:layout_constraintStart_toEndOf="@id/cvs_more_inf"
                        app:layout_constraintEnd_toEndOf="@id/cvs_img"
                        app:layout_constraintTop_toTopOf="@id/cvs_img"
                        app:layout_constraintBottom_toBottomOf="@id/cvs_img"
                        app:layout_constraintHorizontal_bias="0.6" app:layout_constraintVertical_bias="0.934"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/eop">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/end_of_the_pg_img"
                        android:id="@+id/eop_img"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="@string/end_text"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="8dp"/>
                <Button
                        android:background="@drawable/prev_tpage_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/prev_tpg_btn3"
                        app:layout_constraintEnd_toEndOf="@+id/eop_img"
                        app:layout_constraintStart_toStartOf="@+id/eop_img"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.033"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>